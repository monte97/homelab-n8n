version: '3.8'

services:
  n8n:
    image: {{ n8n_docker_image }}:{{ n8n_docker_tag }}
    container_name: n8n
    restart: unless-stopped
    ports:
      - "{{ n8n_port }}:5678"
    environment:
      # Configurazioni di base n8n
      - N8N_HOST={{ n8n_domain }}
      - N8N_PORT=5678
      - N8N_PROTOCOL=http
      - NODE_ENV=production
      - WEBHOOK_URL=http://{{ n8n_domain }}:{{ n8n_port }}
      
      # Timezone
      - GENERIC_TIMEZONE={{ n8n_timezone }}
      - TZ={{ n8n_timezone }}
      
      # Configurazione database (usando SQLite di default)
      - DB_TYPE=sqlite
      - DB_SQLITE_DATABASE=/home/node/.n8n/database.sqlite
      
      # Configurazione encryption
      - N8N_ENCRYPTION_KEY=${N8N_ENCRYPTION_KEY:-}
      
      # Configurazioni security
      - N8N_SECURE_COOKIE=false
      
      # Configurazioni paths
      - N8N_USER_FOLDER=/home/node/.n8n
      - N8N_CONFIG_FILES=/home/node/.n8n/config
      
      # Log level
      - N8N_LOG_LEVEL=info
      
    volumes:
      - {{ n8n_data_dir }}:/home/node/.n8n
      - /var/run/docker.sock:/var/run/docker.sock
    
    # Comando esplicito per avviare n8n
    command: n8n start
    
    # Health check
    healthcheck:
      test: ["CMD-SHELL", "curl -f http://localhost:5678/healthz || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 30s